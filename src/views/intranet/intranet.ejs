   <script>

document.addEventListener('DOMContentLoaded', function() {
    // Obtén el rol del usuario desde la clase del elemento <p>
    const userInfo = document.getElementById('user-info');
    const userRole = parseInt(userInfo.className, 10);

    // Usa SweetAlert
    const swal = Swal.mixin({
        customClass: {
            confirmButton: 'btn btn-primary'
        },
        buttonsStyling: false
    });

    // Maneja el clic en los enlaces
    document.querySelectorAll('.carousel a').forEach(link => {
        link.addEventListener('click', function(event) {
            const requiredRoles = this.getAttribute('data-role').split(',').map(role => role.trim());

            if (requiredRoles.includes(userRole.toString()) || requiredRoles.includes('none')) {
                // Permitir el acceso si el rol del usuario está en la lista de roles permitidos
                return true;
            } else {
                // Evitar el acceso y mostrar la alerta
                event.preventDefault();
                swal.fire({
                    title: 'Acceso Denegado',
                    text: 'No tienes permisos para acceder a este módulo.',
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
                return false;
            }
        });
    });
});


   </script>
