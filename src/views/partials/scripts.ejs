<!-- Alert cierre sesion -->
<script>
  function showAlertAndLogout(event) {
      event.preventDefault();

      Swal.fire({
          title: '¿Estás seguro de salir?',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Cerrar sesión',
          customClass: {
              title: 'swal2-title-custom',
              content: 'swal2-content-custom'
          }
      }).then((result) => {
          if (result.isConfirmed) {
              const logout = document.getElementById("logoutUser");
              let timerInterval;
              Swal.fire({
                  title: '¡Esperamos que vuelvas pronto!',
                  icon: 'success',
                  html: 'Cerrando sesión en <b></b>...',
                  timer: 2000,
                  timerProgressBar: true,
                  didOpen: () => {
                      Swal.showLoading();
                      const b = Swal.getHtmlContainer().querySelector('b');
                      timerInterval = setInterval(() => {
                          b.textContent = Swal.getTimerLeft();
                      }, 100);
                  },
                  willClose: () => {
                      clearInterval(timerInterval);
                  },
                  customClass: {
                      title: 'swal2-title-custom',
                      content: 'swal2-content-custom'
                  }
              }).then((result) => {
                  if (result.dismiss === Swal.DismissReason.timer) {
                      console.log('I was closed by the timer');
                  }
              });

              // Retraso de 5 segundos antes de enviar el formulario y cambiar la página
              setTimeout(function() {
                  logout.submit();
              }, 2200); // 5200 milisegundos = 5.2 segundos
          }
      });
  }
</script>



