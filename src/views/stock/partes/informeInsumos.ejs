                                showConfirmButton: false,
                                timer: 1000
                            });                        
                            // Esperar un poco antes de recargar la página
                            setTimeout(() => {
                                location.reload();
                            }, 1000);
                        } else {
                            Swal.fire({
                                position: "top-end",
                                icon: "error",
                                title: "Ocurrió un error :(",
                                showConfirmButton: false,
                                timer: 1000
                            });
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Error al enviar la cantidad adquirida');
                    }
                }


