<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>

    <body style="background-color: rgb(243, 241, 238)">
        <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-3">
            <div class="container">
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <button class="btn btn-transparent" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                    <img id="userIconProfile"
                        src="<%= /http/.test(userLogin.icon) ? userLogin.icon : `/images/iconsProfile/${userLogin.icon}` %>"
                        class="iconProfile me-2" alt="" />
                    <%= userLogin.name %> <i class="fa-solid fa-caret-down fa-lg"></i>
                </button>
                <!-- Menú de navegación -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto"> <!-- 'ms-auto' para alinear a la derecha -->
                        <li class="nav-item">
                            <a class="nav-link" href="/stock/partes">Regresar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            <%- include('../../partials/modals') %> <%- include('../../partials/canvasMenu') %>

                    <!-- TITULO H1 -->
                    <div class="container-fluid mt-4">
                        <p class="text-black h2 text-center shadow-3">
                            <strong>Informar Insumos para el proyecto: "<%= nombreProyecto %>"</strong>
                        </p>
                        <hr class="text-black" />
                    </div>

                    <% if (registros.length===0) { %>
                        <div class="row justify-content-center">
                            <div class="col-6 d-flex justify-content-center">
                                <button class="btn btn-outline-primary" data-bs-target="<%= proyectId %>"
                                    id="iniciarInforme">
                                    Iniciar Informe
                                </button>
                            </div>
                        </div>
                        <% } %>

                            <% if (registros.length !==0) { %>
                                <section class="container">
                                    <div class="row d-flex justify-content-center">
                                        <% data.forEach(item=> { %>
                                            <div class="col-12 col-md-6 col-lg-3 ms-3 mb-4">
                                                <div class="card" style="width: 18rem;">
                                                    <img src="/images/productos/<%= item.producto.imagen %>"
                                                        class="card-img-top card-img-custom"
                                                        alt="<%= item.producto.nombre %>">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <%= item.producto.nombre %>
                                                        </h5>
                                                        <p class="card-text">Cantidad a Producir: <%=
                                                                item.producto.cantidadAProducir %>
                                                        </p>
                                                        <h5>Insumos:</h5>
                                                        <ul>
                                                            <% item.insumos.forEach(insumo=> { %>
                                                                <li class="card-text">
                                                                    <%= insumo.nombre %> - Cantidad: <%= insumo.cantidad
                                                                            %>
                                                                            <%= insumo.unidadDeMedida %>
                                                                </li>
                                                                <% }) %>
                                                        </ul>
                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-primary"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#insumos<%= item.producto.id %>">
                                                            Informar Insumos
                                                        </button>
                                                        <!-- Modal -->
                                                        <div class="modal fade" id="insumos<%= item.producto.id %>"
                                                            tabindex="-1" aria-labelledby="exampleModalLabel"
                                                            aria-hidden="true">
                                                            <div class="modal-dialog modal-xl">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <p class="modal-title h5 text-danger"
                                                                            id="exampleModalLabel">
                                                                            <%= item.producto.nombre %> <i
                                                                                    class="fa-solid fa-tags"></i>
                                                                        </p>
                                                                        <button type="button" class="btn-close"
                                                                            data-bs-dismiss="modal"
                                                                            aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <% item.insumos.forEach(insumo=> { %>
                                                                            <div class="row mb-4">
                                                                                <div
                                                                                    class="col-12 col-md-12 col-lg-3 mb-2 mb-md-0">
                                                                                    <label for=""
                                                                                        class="text-danger fw-bolder">
                                                                                        <%= insumo.nombre %>
                                                                                    </label>
                                                                                    <textarea name="detalle" disabled
                                                                                        class="form-control" cols="1"
                                                                                        rows="1" id="detalle"
                                                                                        placeholder="">*Requerido: <%= insumo.cantidad * item.producto.cantidadAProducir %> <%= insumo.unidadDeMedida %></textarea>
                                                                                </div>
                                                                                <div
                                                                                    class="col-12 col-md-12 col-lg-3 mb-2 mb-md-0">
                                                                                    <label for="">Cantidad de insumo
                                                                                        adquirida</label>
                                                                                    <input type="number"
                                                                                        <%= insumo.cantidadAdquirida >= 1 ? 'disabled' : ''  %>
                                                                                        class="form-control"
                                                                                        name="cantidadAdquirida"
                                                                                        id="cantidadAdquirida<%= insumo.id %>"
                                                                                        placeholder="Ingrese la cantidad adquirida" >
                                                                                    <button
                                                                                        class="btn mt-1 <%= insumo.cantidadAdquirida >= 1 ? 'btn-success' : 'btn-outline-success'  %>  w-100 fw-bold"
                                                                                        data-insumo-id="<%= insumo.id %>"
                                                                                        data-proyecto-id="<%= proyectId %>" 
                                                                                        onclick="enviarCantidadAdquirida(this)"
                                                                                        > <% if (insumo.cantidadAdquirida >= 1 ) { %>
                                                                                            <i class="fa-solid fa-circle-check"></i>
                                                                                            <% } else { %>
                                                                                               Enviar Cantidad Adquirida
                                                                                          <% } %> </button>
                                                                                </div>
                                                                                <div
                                                                                    class="col-12 col-md-12 col-lg-3 mb-2 mb-md-0">
                                                                                    <label for="">N° de Factura</label>
                                                                                    <input type="number"
                                                                                    <%= insumo.factura >= 1 ? 'disabled' : ''  %>
                                                                                        class="form-control"
                                                                                        name="factura"
                                                                                        id="factura<%= insumo.id %>"
                                                                                        placeholder="Ingrese el número de factura">
                                                                                    <button
                                                                                        class="btn mt-1 <%= insumo.factura >= 1 ? 'btn-success' : 'btn-outline-success'  %> w-100 fw-bolder"
                                                                                        data-factura-id="<%= insumo.id %>"
                                                                                        data-proyecto-id="<%= proyectId %>"
                                                                                        onclick="enviarFactura(this)"
                                                                                        > <% if (insumo.factura >= 1 ) { %>
                                                                                            <i class="fa-solid fa-circle-check"></i>
                                                                                            <% } else { %>
                                                                                               Enviar Número de Factura
                                                                                          <% } %></button>
                                                                                </div>
                                                                                <div class="col-12 col-md-12 col-lg-3">
                                                                                    <label for="">Detalle</label>
                                                                                    <textarea name="detalle"
                                                                                    <%= insumo.detalle !== "" && insumo.detalle !== null  ? 'disabled' : ''  %>
                                                                                        class="form-control" cols="1"
                                                                                        rows="1"
                                                                                        placeholder="El detalle es opcional..."
                                                                                        id="detalle<%= insumo.id %>"
                                                                                        ></textarea>
                                                                                    <button
                                                                                        class="btn mt-1 <%= insumo.detalle !== "" && insumo.detalle !== null  ? 'btn-success' : 'btn-outline-success'  %> w-100 fw-bolder"
                                                                                        data-detalle-id="<%= insumo.id %>"
                                                                                        data-proyecto-id="<%= proyectId %>"
                                                                                        onclick="enviarDetalle(this)"
                                                                                        > <% if (insumo.detalle !== "" && insumo.detalle !== null ) { %>
                                                                                            <i class="fa-solid fa-circle-check"></i>
                                                                                            <% } else { %>
                                                                                               Enviar Detalle
                                                                                          <% } %></button>
                                                                                </div>
                                                                            </div>
                                                                            <hr>
                                                                            <% }) %>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">Cerrar</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                </section>
                                <% } %>
                               
                                <div class="d-flex justify-content-end m-4">
                                    <a href="/stock/partes/<%= proyectId %>" id="boton-continuar" type="button" class="btn btn-outline-danger" style="display: none;">
                                       Continuar al parte semanal <i class="fa-solid fa-forward"></i>
                                    </a>
                                </div>
        </main>

        <%- include('../../partials/scripts') %>
            <script src="//code.tidio.co/hlix5kfat3m92rb4tfebsyogegqfbmo3.js" async></script>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const button = document.getElementById('iniciarInforme');
                    const proyectId = button.getAttribute('data-bs-target');

                    button.addEventListener('click', () => {
                        fetch('https://encope-node-js.onrender.com/api/insumos/addproyectoInsumo', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ proyectoId: proyectId })
                        })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('Network response was not ok');
                                }
                                return response.json();
                            })
                            .then(data => {
                                console.log(data.message);
                                let timerInterval;
                                Swal.fire({
                                    title: "Iniciando Informe!",
                                    html: "cargando en <b></b> milliseconds.",
                                    timer: 1500,
                                    timerProgressBar: true,
                                    didOpen: () => {
                                        Swal.showLoading();
                                        const timer = Swal.getPopup().querySelector("b");
                                        timerInterval = setInterval(() => {
                                            timer.textContent = `${Swal.getTimerLeft()}`;
                                        }, 100);
                                    },
                                    willClose: () => {
                                        clearInterval(timerInterval);
                                    }
                                }).then((result) => {
                                    if (result.dismiss === Swal.DismissReason.timer) {
                                        console.log("I was closed by the timer");
                                        window.location.reload();
                                    }
                                });
                            }).catch(error => console.log(error));
                    });
                });
            </script>

            <script>
                async function enviarCantidadAdquirida(button) {
                    const idInsumo = button.getAttribute('data-insumo-id');
                    const idProyecto = button.getAttribute('data-proyecto-id');
                    const inputCantidad = document.getElementById(`cantidadAdquirida${idInsumo}`);
                    const cantidadAdquirida = inputCantidad.value;
                    

                    if (cantidadAdquirida <= 0) {
                    Swal.fire({
                      icon: "error",
                      title: "Oops...",
                      text: "La cantidad no puede ser cero o menor",                      
                    });
                    return;
                  };

                    try {
                        const response = await fetch(`https://encope-node-js.onrender.com/api/insumos/cantidadAdquirida/${idInsumo}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                cantidadAdquirida: cantidadAdquirida,
                                idProyecto: idProyecto
                            })
                        });

                        const data = await response.json();
                        
                        if (response.ok) {
