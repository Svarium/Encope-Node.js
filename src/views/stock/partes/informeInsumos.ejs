            <script>
               // Función para verificar si todos los inputs y textareas están deshabilitados
                function verificarCamposDeshabilitados() {
                    const allInputs = document.querySelectorAll('input');
                    const allTextareas = document.querySelectorAll('textarea');
                    const allCampos = [...allInputs, ...allTextareas];
                    const allCamposDisabled = allCampos.filter(campo => campo.disabled).length === allCampos.length;
                    const botonContinuar = document.getElementById('boton-continuar');

                    if (allCampos.length > 0 && allCamposDisabled) {
                        Swal.fire({
                            icon: "success",
                            title: "Finalizado",
                            text: "¡insumos informados correctamente!",
                            footer: '<a href="/stock/partes/<%= proyectId %>">¿Continuar al parte semanal?</a>'
                        });

                        botonContinuar.style.display= 'block'
                    }
                }

                // Llamar a la función inicialmente y después de cualquier cambio en los inputs o textareas
                window.addEventListener('load', verificarCamposDeshabilitados);
                document.addEventListener('input', verificarCamposDeshabilitados);
                document.addEventListener('change', verificarCamposDeshabilitados);
            </script>
    </body>
</html>