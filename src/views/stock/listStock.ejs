<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body style="background-color: rgb(243, 241, 238)">
    <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-3">
      <div class="container">
        <button
          class="navbar-toggler d-lg-none"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapsibleNavId"
          aria-controls="collapsibleNavId"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <button
          class="btn btn-transparent"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"
        >
          <img
            id="userIconProfile"
            src="<%= /http/.test(userLogin.icon) ? userLogin.icon : `/images/iconsProfile/${userLogin.icon}` %>"
            class="iconProfile me-2"
            alt=""
          />
          <%= userLogin.name %> <i class="fa-solid fa-caret-down fa-lg"></i>
        </button>       
    </nav>

    <main>
      <%- include('../partials/modals') %> <%- include('../partials/canvasMenu')
      %>


      <!-- TITULO H1 -->
      <div class="container-fluid mt-4">
        <p class="text-black h2 text-center shadow-3">
          <strong>Stock</strong>
        </p>
        <hr class="text-black" />        
      </div>

      <!-- BOTONES DE ACCIÓN PARA PRODUCCIÓN -->

      <div class="container text-center">

         <!-- BOTON PARA AGREGAR NUEVO PRODUCTO -->
         <a href="/stock/newProduct"><button type="button" class="btn btn-primary">
          Dar de alta un nuevo producto +
        </button></a>
        <!-- BOTON PARA AGREGAR NUEVO TALLER -->
        <a href=""><button type="button" class="btn btn-success">
          Dar de alta un nuevo taller +
        </button></a>     
         <!-- BOTON PARA AGREGAR NUEVO PROYECTO PRODUCTIVO -->
         <a href=""> <button type="button" class="btn btn-danger">
          Nuevo proyecto productivo +
       </button></a>
        

     </div>      

      </div>

     
      <!-- TABLA DE STOCK  -->
      <% if (locals.userLogin && locals.userLogin.destinoId == 31) { %>
      <hr />
      <div class="container-fluid">
        <h4 class="text-center">Tabla de stock</h4>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Producto</th>
              <th scope="col">Cantidad</th>
              <th scope="col">ultima Actualización</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% stock.forEach(item => { %>
              <td class="text-center"><%= item.producto.nombre %></td>
              <td><%= item.cantidad %></td>
              <td>
                <%= new Intl.DateTimeFormat('es-AR', { year: 'numeric', month:
                'long', day: 'numeric', hour: 'numeric', minute: 'numeric',
                second: 'numeric', timeZone: 'America/Argentina/Buenos_Aires'
                }).format(new Date(item.updatedAt)) %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <% } %>
    </main>

    <%- include('../partials/scripts') %>

    <script
      src="//code.tidio.co/hlix5kfat3m92rb4tfebsyogegqfbmo3.js"
      async
    ></script>
  </body>
</html>
