<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head') %>

  <body style="background-color: rgb(243, 241, 238)">
    <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-3">
      <div class="container">
        <button
          class="navbar-toggler d-lg-none"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapsibleNavId"
          aria-controls="collapsibleNavId"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <button
          class="btn btn-transparent"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"
        >
          <img
            id="userIconProfile"
            src="<%= /http/.test(userLogin.icon) ? userLogin.icon : `/images/iconsProfile/${userLogin.icon}` %>"
            class="iconProfile me-2"
            alt=""
          />
          <%= userLogin.name %> <i class="fa-solid fa-caret-down fa-lg"></i>
        </button>       
    </nav>

    <main>
      <%- include('../../partials/modals') %> <%- include('../../partials/canvasMenu')
      %>


      <!-- TITULO H1 -->
      <div class="container-fluid mt-4">
        <p class="text-black h2 text-center shadow-3">
          <strong>Agregar un nuevo Producto +</strong>
        </p>
        <hr class="text-black" />        
    

        <!-- FORMULARIO AGREGAR PRODUCTO -->


        <div class="container shadow">
          <form action="/stock/newProduct" method="POST" enctype="multipart/form-data">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control <%= (locals.errors && errors.nombre) && 'is-invalid'%>" id="nombre" name="nombre" placeholder="Ingrese su nombre" value="<%= (locals.old && old.nombre) && old.nombre %>">
                <small id="errorNombre" class="text-danger ms-2"><%= locals.errors && errors.nombre ? errors.nombre.msg : null %></small>
              </div>
              <div class="form-group col-md-6">
                <label for="unidadDeMedida">Unidad de Medida</label>
                <select class="form-control <%= (locals.errors && errors.medida) && 'is-invalid'%>" id="unidadDeMedida" name="medida">
                  <option value="">Seleccione</option>
                  <option value="kg">Kilogramos</option>
                  <option value="g">Gramos</option>
                  <option value="l">Litros</option>
                  <!-- Agrega más opciones según tus necesidades -->
                </select>
                <small id="errorNombre" class="text-danger ms-2"><%= locals.errors && errors.medida ? errors.medida.msg : null %></small>
              </div>
              <div class="form-group col-md-12">
                <label for="detalle">Detalle</label>
                <textarea name="detalle" class="form-control <%= (locals.errors && errors.detalle) && 'is-invalid'%>" id="detalle" placeholder="Ingrese el detalle" value="<%= (locals.old && old.detalle) && old.detalle %>"></textarea>
              </div>
              <small id="errorDetalle" class="text-danger ms-2"><%= locals.errors && errors.detalle ? errors.detalle.msg : null %></small>
            </div>
            <div class="form-row">
              <div class="form-group col-md-12 mt-3">       
                <input type="file" name="producto" class="form-control rounded <%= (locals.errors && errors._undefined) && 'is-invalid'%>" id="producto">
                <small id="errorProducto" class="text-danger ms-2"><%= locals.errors && errors._undefined ? errors._undefined.msg : null %></small>      
              </div>                      
            </div>
            <button type="submit" class="btn btn-primary mb-3">Enviar</button>
          </form>
        </div>

    </main>

    <%- include('../../partials/scripts') %>

    <script
      src="//code.tidio.co/hlix5kfat3m92rb4tfebsyogegqfbmo3.js"
      async
    ></script>
  </body>
</html>
