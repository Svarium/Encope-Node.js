   <!-- Mi estilo-->
   <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Error</title>
  <link rel="shortcut icon" href="/images/favicom_encope.png" type="image/x-icon">
</head>
<body class="error-body">
  
  <pre class="text-justify ms-5 mb-5 text-muted"><%= error.stack %></pre>

  <!-- ERROR -->


  <div class="container">
    <div class="row justify-content-start align-items-center ">
      <div class="d-flex flex-column error-info">
       
        <h2 class="text-start text-white"><%= error.status %></h2>       
      </div>  
      <div class="mb-3">
      <button type="button" class="btn btn-primary abrir" data-bs-toggle="modal" data-bs-target="#exampleModal">
        + Info
      </button>
      <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Detalles del error</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% if (userLogin && (userLogin.rol === 1 || userLogin.rol === 2) ) { %>
          <small class="text-white text-start"><%= message %></small>
          <pre class="text-justify ms-5 mb-5 text-muted"><%= error.stack %></pre>
        <% }else {  %>
          <i class="fas fa-exclamation-triangle"></i>
         <span>upss hubo un error...le sugerimos regresar al inicio del sitio mientras trabajamos en resolverlo.</span>
          <% }  %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <a href="/inicio" type="button" class="btn btn-primary">ir al inicio</a>
      </div>
    </div>
  </div>
</div>
      </div>
      </div>
  </div>


<!-- ERROR -->


<%- include('./partials/scripts') %> 
</body>
</html>







 