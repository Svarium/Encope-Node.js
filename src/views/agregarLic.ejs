<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.1.1/dist/css/bootstrap.min.css">
    <link rel="shortcut icon" href="/images/favicom_encope.png" type="image/x-icon">
    <style>
        body {
            background-image: url('ruta/a/la/imagen.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
        }
    </style>
</head>
<body style="background-image: url('/images/img\/fondo.png');">

    <div class="container fluid mt-5">
        <div class="form-container bg-white p-3 text-black mt-1 rounded">
            <form action="/licitacion/agregar" method="POST" enctype="multipart/form-data" id="formAddLicitacion">
                <h3 class="text-center mb-4">Nueva publicación + </h3>
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <label for="expediente" class="form-label">N° de expediente</label>
                        <input  type="text" name="expediente" class="form-control rounded <%= (locals.errors && errors.expediente) && 'is-invalid'%>" id="expediente" value="<%= (locals.old && old.expediente) && old.expediente %>">
                        <small id="errorExpediente" class="text-danger ms-2"><%= locals.errors && errors.expediente ? errors.expediente.msg : null %></small>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" name="titulo" class="form-control rounded <%= (locals.errors && errors.titulo) && 'is-invalid'%>" value="<%= (locals.old && old.titulo) && old.titulo %>" id="nombre">
                        <small id="errorNombre" class="text-danger ms-2"><%= locals.errors && errors.titulo ? errors.titulo.msg : null %></small>
                    </div>
                </div>
                <div class="col-md-12 mb-2">
                    <label for="objetivo" class="form-label">Objetivo</label>
                    <textarea id="objetivo" class="form-control rounded <%= (locals.errors && errors.objetivo) && 'is-invalid'%>" name="objetivo"><%= (locals.old && old.objetivo) && old.objetivo %></textarea>
                    <small id="errorObjetivo" class="text-danger ms-2"><%= locals.errors && errors.objetivo ? errors.objetivo.msg : null %></small>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label for="archivo" class="form-label">Archivo</label>
                        <input type="file" name="pdf" class="form-control rounded <%= (locals.errors && errors.pdf) && 'is-invalid'%>" id="archivo">
                        <small id="errorArchivo" class="text-danger ms-2"><%= locals.errors && errors.pdf ? errors.pdf.msg : null %></small>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label for="tipo" class="form-label">Tipo de publicación</label>
                        <select id="tipo" class="form-control rounded <%= (locals.errors && errors.tipo) && 'is-invalid'%>" name="tipo">
                            <option value="" selected hidden>Seleccione...</option>
                            <% tipos.forEach(({nombre, id}) => { %>
                            <option value="<%= id %>"> <%= nombre %> </option>
                            <% }) %>
        
                        </select>
                        <small id="errorTipo" class="text-danger ms-2"><%= locals.errors && errors.tipo ? errors.tipo.msg : null %></small>
                    </div>
                    <div class="mb-3 text center">
                        <small class="text-danger" id="errorFormAddLicitacion"></small>
                      </div>  
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary rounded">Enviar</button>
                    <a href="/licitacion/publicaciones" class="btn btn-danger rounded">Volver</a>
                </div>
        
            </form>
        </div>
    </div>

    
    
    
    
    
    

    <script src="https://unpkg.com/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/addLicitacion.js"></script>
    <%- include('./partials/scripts')  %>
</body>
</html>
