<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')  %>
         <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
         <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
         <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> 
         <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">        
          
    <body style="background-image: url('/images/imagen\ productos\ vector-03.png'); background-size: cover;">
  
      <nav class="navbar navbar-expand-sm navbar-light bg-body-secondary">
          <div class="container">
          <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav me-auto mt-2 mt-lg-0">
              <a class="nav-link active" href="/inicio" aria-current="page">Ir al Inicio<span class="visually-hidden"></a>
              <a class="nav-link active" href="/licitacion/publicaciones" aria-current="page">Regresar<span class="visually-hidden"></a>
              
              <li class="nav-item dropdown">
                  
                  <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Menú</a>
                  <div class="dropdown-menu" aria-labelledby="dropdownId">
                    <% if (locals.userLogin && locals.userLogin.rol === 1) { %>
                      <a class="dropdown-item" href="/licitacion/publicaciones">Administrar Licitaciones</a>
                  <% } %>
                    
                    <a class="dropdown-item" href="/users/logout">Cerrar Sesión</a>
                 
                  </div>
                </li>
              
            
            </ul>
         <!--  <form action="/search" method="get" class="d-flex my-2 my-lg-0">
            <input  class="form-control me-sm-2" type="search" name="search" placeholder="Buscar Libro">
            <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Buscar</button>
          </form> -->       
          <a href="/"><img id="userIconProfileSearch" src="<%= /http/.test(userLogin.icon) ? userLogin.icon : `/images/iconsProfile/${userLogin.icon}` %>" class="iconProfile" alt=""></a>
        </div>
      </div>
    </nav><br>

    <main>

        <div class="row ms-3 me-3 justify-content-center">
            <div class="col-md-6">
                <h4 class="text-center">Resultado de la busqueda:</h4>
                <hr>


                <% if (publicaciones.length != 0) { %>
                 <% publicaciones.forEach(publicacion => { %>
                    <div class="card">
                        <div class="card-header">
                         <%= publicacion.tipo.nombre %>
                        </div>
                        <div class="card-body">
                          <h5 class="card-title"><%= publicacion.titulo %></h5>
                          <p class="card-text"><%= publicacion.objetivo %></p>
                          <a href="/images/licitaciones/<%= publicacion.archivo %>" download="licitacionPublica" class="btn btn-primary">Archivo</a>
                          <a class="btn btn-success" href="/licitacion/editar/<%= publicacion.id %>">Editar</i></a>
                          <form  action="/licitacion/eliminar/<%= publicacion.id %>?_method=DELETE" method="POST" class="mt-2 d-flex">
                            <button type="submit" class="btn btn-danger">Borrar Publicación</button>
                          </form>
                 <% }) %>
                <% } %>              
            </div>          
    </main>







    <!-- BOOTSTRAP -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script>
  const icon = document.getElementById('userIconProfileSearch')
  const cardImg = document.getElementById('imgIcon')
  icon.addEventListener('error', () => {
  icon.src = 'https://cdn-icons-png.flaticon.com/512/149/149071.png'

})

cardImg.addEventListener('error', () => {
  cardImg.src = 'https://cdn-icons-png.flaticon.com/512/149/149071.png'
})
</script>
</body>
</html>