<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')  %>
         <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<body style="background-image: url('/images/imagen\ productos\ vector-03.png'); background-size: cover;">
  
    <nav class="navbar navbar-expand-sm navbar-light bg-body-secondary">
        <div class="container">
          <a href="/inicio"><img src="<%= /http/.test(userLogin.icon) ? userLogin.icon : `/images/iconsProfile/${userLogin.icon}` %>" class="iconProfile" alt="" width="100px"></a>
        <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId"
          aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav me-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="#" aria-current="page">Bienvenido, <%= userLogin.name %> <span class="visually-hidden">(current)</span></a>
            </li>
          
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Menú</a>
              <div class="dropdown-menu" aria-labelledby="dropdownId">
                <a class="dropdown-item" href="/users/logout">Cerrar Sesión</a>
                <a class="dropdown-item" href="/users/perfil">Mi Perfil</a>
              </div>
            </li>
          </ul>
          <form action="/users/search" method="get" class="d-flex my-2 my-lg-0">
            <input  class="form-control me-sm-2" type="search" name="search" placeholder="Email del usuario">
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Buscar</button>
          </form>
        </div>
      </div>
    </nav><br>
    
<main>


   <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Email</th>
          <th scope="col">Rol</th>
          <th scope="col">Credencial</th>
          <th scope="col">Destino</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
       <% usuarios.forEach(({id, name, surname, email, rolId, nombre, rol, credencial,destino}) => { %>
          <tr>
          <th scope="row"><%= name %></th>
          <td><%= surname %></td>
          <td><%= email%></td>
          <td><%= rol.nombre%></td>
          <td><%= credencial? credencial : '-' %></td>
          <td><%= destino ? destino.nombreDestino : '-' %></td>
          <td>
            <div class="d-flex">
              <form action="/users/rol/<%= usuarios.id %>" method="POST" class="row g-6">
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" name="userId" value="<%= id %>">
               
              <div class="col-md-10">
                <label for="nuevo_rol" class="form-label">Nuevo rol:</label>
                <select name="nuevoRol" id="nuevoRol" class="form-select">
                  <option value="" selected hidden>Seleccione...</option>
                  <option value="1">SuperAdmin</option>
                  <option value="2">Admin</option>
                  <option value="3">Editor-Noticias</option>
                  <option value="4">Editor-Licitaciones</option>
                  <option value="5">Editor-Intranet</option>
                  <option value="6">Visitante</option>
                </select>
                <button type="submit" class="btn btn-primary mt-1">Actualizar</button>
              </div>               
            </form>    
            </div>
      </td>
        </tr>
       <% }) %>
        
       
      </tbody>
    </table>
   </div>
    
    
</main>



<!-- BOOTSTRAP -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
 </body>
</html>